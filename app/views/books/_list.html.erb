<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag book_user.get_profile_image(63, 63) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= book_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= book_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to "edit", edit_user_path(book_user.id) %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Option</p>
      <%= f.text_area :body %><br>
      <%= f.submit "Create Book", class: "btn btn-success"  %>
  <% end %>
</div>